<%- include('../includes/nav.ejs')%>
<div style="background: papayawhip;">
    <div class="container">
        <div class="col-md-2">

            <img src="/images/krishnamoorthy.jpg" class="img-circle person" alt="Random Name" width="355" height="355">

        </div>
        <div class="col-md-9">
            <!-- <div class="col-md-12 text-center">Personal Information</div> -->
            <div class="col-md-6">
                <label>First name:</label>
                <p><%= user.firstName%></p>
            </div>
            <div class="col-md-6">
                <label>Last name:</label>
                <p><%= user.lastName%></p>
            </div>
            <div class="col-md-6">
                <label>Email:</label>
                <p><%= user.email%></p>
            </div>
            <div class="col-md-6">
                <label>Contact number:</label>
                <p><%= user.phoneNumber%></p>
            </div>
            <div class="col-md-12 text-center">
                <button class="btn btn-success">Edit</button>
            </div>
            <ul class="nav nav-tabs">
                <li><a data-toggle="tab" href="#Orders">Orders</a></li>
                <li><a data-toggle="tab" href="#Transactions">Transactions</a></li>
            </ul>

            <div class="tab-content">

                <div id="Orders" class="tab-pane fade">
                    <div class="col-md-12">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <td>Date</td>
                                    <td>Reason</td>
                                    <td>Cost</td>
                                    <td>Spend by</td>
                                    <td>Updated by</td>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(exp of user.orders) { %>
                                <tr>
                                    <td><%= exp.date%></td>
                                    <td><%= exp.reason%></td>
                                    <td><%= exp.cost%></td>
                                    <td><%= exp.spendUser.firstName%></td>
                                    <td><%= exp.updatedUser.firstName%></td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="Transactions" class="tab-pane fade">
                    <% if(user.transactions.length > 0) { %>
                    <div class="col-md-12">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>paymentMode</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let tran of user.transactions) {%>
                                <tr class="<%= tran.paymentStatus === 'TXN_FAILURE' ? 'failed': 'success'%> ">
                                    <td><%= tran.totalAmount %></td>
                                    <td><%= tran.paymentStatus %></td>
                                    <td><%= tran.paymentMode %></td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                    <h2>No transactions found</h2>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../includes/footer.ejs')%>